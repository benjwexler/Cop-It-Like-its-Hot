<p id="notice"><%= notice %></p>






<div id="portfolioBalanceContainer">
        <div id="portfolioBalanceTextContainer">
            <div id="portfolioBalanceText">
                Transactions
            </div>
        </div>
    </div>
    <div id="bossContainer">
        
    <div id="holdingsAndPurchaseContainer">
        <div id="holdingsOuterContainer">
            <div id="holdingsMainContainer">

            <% @transactions.each do |transaction| %>
              <div class="holdingsRow">
                <div class="transactionsStockName">
                  <%= transaction.buy_or_sell %> 
                  <br>
                  <span style="color: black">(<%= transaction.stock_symbol %>)</span>
                </div>
               
                <div class="transactionsShares">
                  <%= transaction.shares %> 
                  <% if transaction.shares > 1 %> 
                  Shares
                  <% else %> 
                  Share
                  <% end %>
                </div>

                <div class="transactionsValuePerStock">
                    <%= number_to_currency(transaction.price_per_share) %>
                    <br> 
                    <span class="perShareText" style="
                    font-size: 10px">(per share)</span>
                </div>
               
              </div>
              <br>
            <% end %>
             
                
              
            </div>

        </div>
      
    </div>
</div>

