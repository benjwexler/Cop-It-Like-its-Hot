<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="wrapper">

  <h1>Register</h1>
  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form", placeholder: "Name" %>
  </div>
  <br>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form", placeholder: "Email" %>
  </div>
<br>
  <div class="field">

    
  <div id="pwdMinText">(6 character min)</div>
  
    
    <%= f.password_field :password, autocomplete: "new-password", class: "form", placeholder: "Password" %>
  </div>
  <br>  
  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form", placeholder: "Confirm Password" %>
  </div>
  <br>  
  <div class="actions">
    <%= f.submit "Sign up", class: "btn" %>
  </div>
<% end %>

    </div>


